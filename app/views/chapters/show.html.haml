= javascript_include_tag "question"
= stylesheet_link_tag "question"

= "Welcome " + current_user.name + "!"
=link_to "Sign out", signout_path 

%center
     %h2= "#{@book.name} / #{@chapter.name} (#{@chapter.number})"

%br
%hr
%table{:id => "questions"}
     %tbody
          - @questions.each do |question|
               %tr{:id => "question_" + question.id.to_s}
                    - form_for question, :remote => true do |f|
                         %br
                         = f.label "Question"
                         = f.text_area :question, :value => question.question                                   
                         %br
                         = f.label "Correct answer"
                         = f.text_field :correct_answer, :value => question.correct_answer, :class => "field"
                         %br
                         = f.label "Incorrect answer #1"
                         = f.text_field :incorrect_answer_1, :value => question.incorrect_answer_1, :class => "field"
                         %br
                         = f.label "Incorrect answer #2"
                         = f.text_field :incorrect_answer_2, :value => question.incorrect_answer_2, :class => "field"
                         %br
                         = f.label "Incorrect answer #3"
                         = f.text_field :incorrect_answer_3, :value => question.incorrect_answer_3, :class => "field"
                         %br  
                         = f.label "Topic"
                         = f.text_field :topic, :value => question.topic, :class => "field"
                         %br  
                         %br
                         = f.submit "Save"
                         %br
                         %br
                         %hr                      

%p= link_to_function('Add question', "addQuestionRow(#{@chapter.id})" )
%p= link_to('Back to Chapters', '/books/' + @book.id.to_s)